<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.develop.elegant.carcontrol">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.develop.elegant.carcontrol.MainMenuActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.develop.elegant.carcontrol.MainActivity"
            android:screenOrientation="landscape"
            android:launchMode="singleTask">
        </activity>

        <activity android:name="com.develop.elegant.carcontrol.ServoControlActivity"
            android:screenOrientation="landscape"
            android:launchMode="singleTask">
        </activity>

        <activity android:name="com.develop.elegant.carcontrol.SettingsActivity"
            android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1747383877486799~8266917383"/>

    </application>

</manifest>